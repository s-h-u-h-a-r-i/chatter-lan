{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ESNext",

    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    
    // Paths Alias
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    // Type Checking & Safety
    "strict": true,
    "types": ["vite/client"]
  }
}
